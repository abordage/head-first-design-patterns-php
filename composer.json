{
    "name": "abordage/head-first-design-patterns-php",
    "description": "Design patterns PHP implementation examples from Head First Design Patterns (2020, 2nd Edition)",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "Design Pattern PHP implementation",
        "Decorator Pattern PHP",
        "Singleton Pattern PHP",
        "Observer Pattern PHP",
        "Strategy Pattern PHP"
    ],
    "authors": [
        {
            "name": "Pavel Bychko",
            "email": "box@abordage.dev"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.28",
        "friendsofphp/php-cs-fixer": "^3.11",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Pattern\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "phpcsf": "vendor/bin/php-cs-fixer fix --diff",
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "scripts-descriptions": {
        "phpcsf": "Run PHP-CS-Fixer fix",
        "phpstan": "Run PHPStan"
    }
}
